<div class="page-header">
  <h1>Editing Before Function #<%= @before_function.id %></h1>
</div>

<%= form_tag(before_function_url(@before_function), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :user_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :user_id, @before_function.user_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :function_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :function_id, @before_function.function_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Before Function", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
