<div class="page-header">
  <h1>Before functions</h1>
</div>

<p><%= link_to 'Add a New Before Function', new_before_function_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Function</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @before_functions.each do |before_function| %>
      <tr>
        <td><%= before_function.user_id %></td>
        <td><%= before_function.function_id %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, before_function_url(before_function), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_before_function_url(before_function), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, before_function_url(before_function), method: 'delete', data: { confirm: "Do you really want to delete this before_function?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

