<div class="page-header">
  <h1>Editing Industry #<%= @industry.id %></h1>
</div>

<%= form_tag(industry_url(@industry), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :name, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :name, @industry.name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Industry", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
