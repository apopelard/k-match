<div class="page-header">
  <h1>Editing Function #<%= @function.id %></h1>
</div>

<%= form_tag(function_url(@function), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :name, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :name, @function.name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Function", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
