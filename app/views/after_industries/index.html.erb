<div class="page-header">
  <h1>After industries</h1>
</div>

<p><%= link_to 'Add a New After Industry', new_after_industry_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Industry</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @after_industries.each do |after_industry| %>
      <tr>
        <td><%= after_industry.user_id %></td>
        <td><%= after_industry.industry_id %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, after_industry_url(after_industry), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_after_industry_url(after_industry), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, after_industry_url(after_industry), method: 'delete', data: { confirm: "Do you really want to delete this after_industry?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

