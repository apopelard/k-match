<div class="page-header">
  <h1>Before industries</h1>
</div>

<p><%= link_to 'Add a New Before Industry', new_before_industry_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Industry</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @before_industries.each do |before_industry| %>
      <tr>
        <td><%= before_industry.user_id %></td>
        <td><%= before_industry.industry_id %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, before_industry_url(before_industry), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_before_industry_url(before_industry), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, before_industry_url(before_industry), method: 'delete', data: { confirm: "Do you really want to delete this before_industry?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

