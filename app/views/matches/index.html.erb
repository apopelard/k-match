<div class="page-header">
  <h1>Matches</h1>
</div>

<p><%= link_to 'Add a New Match', new_match_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Match index</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.match_index %></td>
        <td><%= match.user_id %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, match_url(match), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_match_url(match), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, match_url(match), method: 'delete', data: { confirm: "Do you really want to delete this match?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

