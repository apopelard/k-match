<div class="page-header">
  <h1>Editing Match #<%= @match.id %></h1>
</div>

<%= form_tag(match_url(@match), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :match_index, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :match_index, @match.match_index, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :user_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :user_id, @match.user_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Match", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
