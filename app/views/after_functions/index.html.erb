<div class="page-header">
  <h1>After functions</h1>
</div>

<p><%= link_to 'Add a New After Function', new_after_function_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Function</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @after_functions.each do |after_function| %>
      <tr>
        <td><%= after_function.user_id %></td>
        <td><%= after_function.function_id %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, after_function_url(after_function), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_after_function_url(after_function), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, after_function_url(after_function), method: 'delete', data: { confirm: "Do you really want to delete this after_function?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

