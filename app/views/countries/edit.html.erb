<div class="page-header">
  <h1>Editing Country #<%= @country.id %></h1>
</div>

<%= form_tag(country_url(@country), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :code, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :code, @country.code, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :name, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :name, @country.name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Country", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
