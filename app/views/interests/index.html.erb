<div class="page-header">
  <h1>Interests</h1>
</div>

<p><%= link_to 'Add a New Interest', new_interest_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @interests.each do |interest| %>
      <tr>
        <td><%= interest.name %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, interest_url(interest), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_interest_url(interest), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, interest_url(interest), method: 'delete', data: { confirm: "Do you really want to delete this interest?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

